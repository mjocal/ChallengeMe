@using ChallengeMe.UI.Web.Models.Helpers;
<script src="~/Scripts/Views/Login.js"></script>

@{
    ViewBag.Title = "Login";
}
<body class="backgroundBg">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <span class="glyphicon glyphicon-lock"></span> Login
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" role="form">
                            <div class="form-group">
                                <label for="inputCedula3" class="col-sm-1 control-label">
                                    @*Cedula*@

                                </label>
                                <div class="col-sm-9">
                                    @Html.CtrlInput(id: "txtCedula", label: "Cedula", required: false, type: "text", placeholder: "Cedula")
                                    @* <input type="Text" class="form-control" id="inputCedula3" placeholder="Cedula" required>*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-1 control-label">

                                    @* Password*@
                                </label>
                                <div class="col-sm-9">
                                    @Html.CtrlInput(id: "txtClave", label: "Password", required: true, type: "password", placeholder: "Password")
                                    @*<input type="password" class="form-control" id="inputPassword3" placeholder="Password" required>*@
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" />
                                            Recuérdame
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group last">
                                <div class="col-sm-offset-1 col-sm-9">
                                    <div class="col-sm-6">@Html.CtrlButton(id: "btnAceptar", value: "Aceptar", evtOnClick: "iniciarSesion()")</div>
                                    <div class="col-sm-6">@Html.CtrlButton(id: "btnCancelar", value: "Cancelar", evtOnClick: "cancelarSesion()")</div>


                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="panel-footer">
                        No eres miembro?<a>@Html.ActionLink("Registrate aquí", "RegistroUsuario", "RegistroUsuario")</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>