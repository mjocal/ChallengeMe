<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Challenge Me!</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-2.2.4.js"></script>
    <script src="~/Scripts/jquery.base64.js"></script>
    <script src="~/Scripts/datatables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.css" />
    <script src="~/Scripts/Controls/BaseModel.js"></script>
    <script src="~/Scripts/Controls/ctrlInputModel.js"></script>
    <script src="~/Scripts/Controls/ctrlButtonModel.js"></script>
    <script src="~/Scripts/Controls/ctrlTableModel.js"></script>
    <script src="~/Scripts/Controls/ctrlDropDownModel.js"></script>
    <script src="~/Scripts/Controls/ctrlImageModel.js"></script>

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    <li>@Html.ActionLink("Eventos", "Evento", "Evento")</li>
                    

                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                   
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>



        @if (Session["Rol"] != null)
        {
            if (Session["Rol"].ToString().Equals("SA") || Session["Rol"].ToString().Equals("ORGANIZADOR"))
            {


                @Html.Partial("_NavBar")

            }

        }

        @if (Session["Rol"] != null)
        {
            if (Session["Rol"].ToString().Equals("WEB"))
            {


                @Html.Partial("_NavBarWeb")

            }
        }
    </div>





    <div id="msgInformationAlert" class="alert alert-dismissible alert-success"
         style="display: none;">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <label id="lblMessage"> Acción procesada!</label>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Challenge Me</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
